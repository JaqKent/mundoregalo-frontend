{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./"],
      "~components/*": ["./components/*"],
      "~context/*": ["./context/*"],
      "~assets/*": ["./assets/*"],
      "~scss/*": ["./scss/*"],
      "~screens/*": ["./screens/*"],
      "~hooks/*": ["./hooks/*"],
      "~interfaces/*": ["./interfaces/*"],
      "~constants/*": ["./constants/*"],
      "~services/*": ["./services/*"],
      "~configs/*": ["./configs/*"],
      "~utils/*": ["./utils/*"]
    }
  },
  "include": ["src", ".eslintrc.cjs", "release.config.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
